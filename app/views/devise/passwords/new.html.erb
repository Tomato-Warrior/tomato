<div class="d-flex justify-content-center min-vh-100 align-items-center">
  <div class="card">
    <h2 class="text-center py-3">忘記密碼?</h2>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group d-flex justify-content-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control login-form" %>
      </div>
    
      <div class="actions d-flex justify-content-center">
        <%= f.submit "寄送重新設定密碼方式", class: "btn btn-lg btn-login-submit p-2" %>
      </div>
      <% end %>
    </div>
    
    <div class="card-footer text-center pt-1 pb-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
