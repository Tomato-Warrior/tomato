<!DOCTYPE html>
<html>
  <head>
    <title>Tomato</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render "shared/navbar" %>
      <%= render "shared/flash" %>
      <%= yield %>
      <%= render "shared/footer" %>
    </div>
    <script>
      $(document).ready(function() {
        $(".tag-select2").select2({
            tags: true,
            multiple: 'true',
            tokenSeparators: [',', ' ']
        })
      })  
      
    </script>
  </body>
</html>
