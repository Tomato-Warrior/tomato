<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <ul>
      <% project.errors.full_messages.each do |message|%>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :project_cover %>
    <%= color_field(:project, :project_cover) %>
  </div>

  <div>
    <%= f.label :project_name %>
    <%= f.text_field :project_name %>
  </div>
  <%= f.submit %>
<% end %>
