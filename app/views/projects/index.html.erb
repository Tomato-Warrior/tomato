<div class="container">
  <h1 class="py-3">Project List</h1>
  <% if user_signed_in? %>
   <div class="my-2">
      <%= link_to 'New Project', new_project_path, class: "badge-pill p-2 path-color" %>
   </div>
    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Project Name</th>
          <th ></th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>   
        <% @projects.each do |project| %>
          <tr> 
            <td class="project_color">
              <div id="project_cover" class="project_color" style="background-color: <%=  project.project_cover %>;">
              </div>
            </td>
            <td>
              <%= link_to project.project_name, project_path(project) %>
            </td>
            <td>
              <%= link_to " + 新增任務", new_project_task_path(project) %>
            </td>
            <td>
              <%= link_to edit_project_path(project) do %>
                <i class="fas fa-pencil-alt"></i>
              <% end %>
            </td>
            <td>
              <%= link_to project, method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>               
        <% end %>
      </tbody>
    </table>
  <% else %>
    <%= link_to "New Project", new_user_session_path %>
  <% end %>
</div>
