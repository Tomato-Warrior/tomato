<div class="timer_controler" data-controller="tictacs">
  <div class="tomato_bg" data-target="tictacs.bgcolor">
    <div class="task-list" data-id="<%= params[:task_id] %>" data-target="tictacs.task_list">
    </div>

  <div class="clock d-flex flex-column justify-content-center align-items-center py-5">
    <div class="display d-flex justify-content-center align-items-center">
      <h1 class="display_time_left pending d-flex justify-content-center align-items-center" data-target="tictacs.show_time_left"></h1>
    </div>
    <a class='startbtn' data-time="10" data-action="click->tictacs#start" data-target="tictacs.startbtn">
      <span><i class="fas fa-play startbtn"></i></span>
    <a>
    <a href='#' class="stopbtn d-none" data-action="click->tictacs#stop" data-target="tictacs.stopbtn" data-id="<%= @tictac.id %>">
      <span><i class="fas fa-stop fa-8x stopbtn"></i></span>
    </a>
    <a href='#' class="relaxbtn d-none" data-action="click->tictacs#relax"  data-time="5" data-target="tictacs.relaxbtn" data-id="<%= @tictac.id %>">
      <span><i class="fas fa-play fa-8x relaxbtn"></i></span>
    </a>
    <audio src="/sounds/drop-sound.mp3" class="drop_sound" data-target="tictacs.drop_sound"></audio>
    <audio src="/sounds/end-sound.mp3" class="finish_sound" data-target="tictacs.finish_sound"></audio>
  </div>
  <div class="btn-group dropleft right_nav">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    </button>
    <div class="dropdown-menu">
      <div class="text-center my-2">
        <%= link_to root_path  do %>
          <i class="fas fa-home fa-3x"></i>
        <% end %>
      </div>
      <div class="text-center my-2">
        <%= link_to list_tictacs_path  do %>
          <i class="fas fa-clipboard-list fa-3x"></i>
        <% end %>
      </div>
      <div class="text-center my-2">
        <%= link_to charts_path  do %>
          <i class="far fa-chart-bar fa-3x"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>